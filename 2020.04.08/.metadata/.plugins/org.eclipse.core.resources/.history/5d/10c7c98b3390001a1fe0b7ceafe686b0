<!DOCTYPE html>
<html>
<head>
	<script src="http://code.jquery.com/jquery-1.9.1.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/3.0.1/handlebars.js"></script>
	<meta charset="UTF-8">
	<title>학과검색</title>
</head>
<body>
	<h1>[학과검색]</h1>
	<select id="dept">
		<option>전산</option>
		<option>건축</option>
		<option>전자</option>
	</select>
	<input type="button" value="검색" id="btnSearch">
	<div>
		<h1>[교수목록]</h1>
		<div>
		인원수:<span id="pcnt"></span>
		</div>
		<table id="tbl" border=1 width=500></table>
		<script id="temp" type="text/x-handlebars-template">
			{{#each pArray}}
				<tr>
					<td class=pcode>{{pcode}}</td>
					<td>{{pname}}</td>
					<td>{{dept}}</td>
					<td>{{hiredate}}</td>
				</tr>
			{{/each}}
		</script>
	</div>
	<div>
		<h1>[학생목록]</h1>
		<div>
		인원수:<span id="scnt"></span>
		</div>
		<table id="tbl1" border=1 width=500></table>
		<script id="temp1" type="text/x-handlebars-template">
			{{#each sArray}}
				<tr class=row>
					<td class=scode>{{scode}}</td>
					<td>{{sname}}</td>
					<td>{{dept}}</td>
					<td>{{birthday}}</td>
				</tr>
			{{/each}}
		</script>
	</div>
</body>
<script>
	$("#btnSearch").on("click", function(){
		var dept=$("#dept").val();
		$.ajax({
			type:"get",
			url:"list.jsp",
			data:{"dept":dept},
			dataType:"json",
			success:function(data){
				var temp=Handlebars.compile($("#temp").html());
				$("#tbl").html(temp(data));
				
				var temp=Handlebars.compile($("#temp1").html());
				$("#tbl1").html(temp(data));
				
				$("#pcnt").html(data.pcnt);
				$("#scnt").html(data.scnt);
			}
		});
	});
	
	$("#row").on("click", function(){
		$.ajax({
			type:"get",
			url:"elist.jsp",
			data:{"scode":scode},
			dataType:"json",
			success:function(data){
				var temp=Handlebars.compile($("#temp").html());
				$("#tbl").html(temp(data));
				
				var temp=Handlebars.compile($("#temp1").html());
				$("#tbl1").html(temp(data));
				
				$("#pcnt").html(data.pcnt);
				$("#scnt").html(data.scnt);
			}
		});
	})
</script>
</html>